<?xml version="1.0" encoding="UTF-8"?>

<definitions targetNamespace="http://mdsuk.com/ws/dise3g/features/definition"
    xmlns="http://schemas.xmlsoap.org/wsdl/" 
    xmlns:fault="http://mdsuk.com/ws/dise3g/fault/definition"
    xmlns:target="http://mdsuk.com/ws/dise3g/features/definition">
     <documentation>This Webservice definition encompasses all operations relating to Features management. </documentation>

	<import namespace="http://mdsuk.com/ws/dise3g/fault/definition" location="../fault/fault.wsdl"/>

    <types>
        <schema xmlns="http://www.w3.org/2001/XMLSchema"
            targetNamespace="http://mdsuk.com/ws/dise3g/features/definition"
            xmlns:features="http://mdsuk.com/ws/dise3g/features/dto/service"
            elementFormDefault="qualified">
            <import namespace="http://mdsuk.com/ws/dise3g/features/dto/service" schemaLocation="../../xsd/featuresservice.xsd"/>

            <element name="SetFeature">
                <complexType>
                    <sequence>
                        <element name="Request" type="features:SetFeatureType"/>
                    </sequence>
                </complexType>
            </element>

            <element name="SetFeatureResponse">
                <complexType>
                    <sequence>
                        <element name="Response" type="features:SetFeatureResponseType"/>
                    </sequence>
                </complexType>
            </element>	
            
            <element name="QueryFeatureHistory">
                <complexType>
                    <sequence>
                        <element name="Request" type="features:QueryFeatureHistoryType"/>
                    </sequence>
                </complexType>
            </element>

            <element name="QueryFeatureHistoryResponse">
                <complexType>
                    <sequence>
                        <element name="Response" type="features:QueryFeatureHistoryResponseType"/>
                    </sequence>
                </complexType>
            </element>			
        </schema>
    </types>

    <message name="SetFeatureRequest">
        <part name="Parameters" element="target:SetFeature"/>
    </message>

    <message name="SetFeatureResponse">
        <part name="Result" element="target:SetFeatureResponse"/>
    </message>
    
    <message name="QueryFeatureHistoryRequest">
        <part name="Parameters" element="target:QueryFeatureHistory"/>
    </message>

    <message name="QueryFeatureHistoryResponse">
        <part name="Result" element="target:QueryFeatureHistoryResponse"/>
    </message>	

    <portType name="FeaturesPortType">
        <operation name="SetFeature">
            <input message="target:SetFeatureRequest"/>
            <output message="target:SetFeatureResponse"/>
            <fault message="fault:SystemFault" name="SystemFault"/>
            <fault message="fault:SecurityFault" name="SecurityFault"/>
            <fault message="fault:ValidationFault" name="ValidationFault"/>
            <fault message="fault:ServiceUnavailableFault" name="ServiceUnavailableFault"/>
        </operation>
        
        <operation name="QueryFeatureHistory">
            <input message="target:QueryFeatureHistoryRequest"/>
            <output message="target:QueryFeatureHistoryResponse"/>
            <fault message="fault:SystemFault" name="SystemFault"/>
            <fault message="fault:SecurityFault" name="SecurityFault"/>
            <fault message="fault:ValidationFault" name="ValidationFault"/>
            <fault message="fault:ServiceUnavailableFault" name="ServiceUnavailableFault"/>
        </operation>		
    </portType>
</definitions>
