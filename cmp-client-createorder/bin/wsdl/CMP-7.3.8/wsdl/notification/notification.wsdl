<?xml version="1.0" encoding="UTF-8"?>

<definitions targetNamespace="http://mdsuk.com/ws/dise3g/notification/definition"
    xmlns="http://schemas.xmlsoap.org/wsdl/"
    xmlns:target="http://mdsuk.com/ws/dise3g/notification/definition"
    xmlns:fault="http://mdsuk.com/ws/dise3g/fault/definition">

    <documentation>This Webservice definition encompasses all operations relating to notifications.
    </documentation>
    
     <import namespace="http://mdsuk.com/ws/dise3g/fault/definition" location="../fault/fault.wsdl"/>

    <types>
        <schema xmlns="http://www.w3.org/2001/XMLSchema"
            targetNamespace="http://mdsuk.com/ws/dise3g/notification/definition"
            xmlns:notification="http://mdsuk.com/ws/dise3g/notification/dto/service"
            elementFormDefault="qualified">

            <import namespace="http://mdsuk.com/ws/dise3g/notification/dto/service" schemaLocation="../../xsd/notificationservice.xsd"/>

            <element name="CreateNotification">
                <complexType>
                    <sequence>
                        <element name="Request" type="notification:CreateNotificationType"/>
                    </sequence>
                </complexType>
            </element>
            
            <element name="CreateNotificationResponse">
                <complexType>
                    <sequence>
                        <element name="Result" type="notification:CreateNotificationResponseType"/>
                    </sequence>
                </complexType>
            </element>
            
            <element name="SetNotificationPreference">
                <complexType>
                    <sequence>
                        <element name="Result" type="notification:SetNotificationPreferenceType"/>
                    </sequence>
                </complexType>
            </element>
            
             <element name="SetNotificationPreferenceResponse">
                <complexType>
                    <sequence>
                        <element name="Result" type="notification:SetNotificationPreferenceResponseType"/>
                    </sequence>
                </complexType>
            </element>
	<element name="QueryNotificationPreferenceHistory">
            	<complexType>
                    <sequence>
                        <element name="Request" type="notification:QueryNotificationPreferenceHistoryType"/>
                    </sequence>
                </complexType>
            </element>
            
            <element name="QueryNotificationPreferenceHistoryResponse">
            	 <complexType>
                    <sequence>
                        <element name="Result" type="notification:QueryNotificationPreferenceHistoryResponseType"/>
                    </sequence>
                </complexType>
            </element>
        </schema>
    </types>

    <message name="CreateNotificationRequest">
        <part name="Parameters" element="target:CreateNotification"/>
    </message>

    <message name="CreateNotificationResponse">
        <part name="Parameters" element="target:CreateNotificationResponse"/>
    </message>
<message name="QueryNotificationPreferenceHistoryResponse">
        <part name="Parameters" element="target:QueryNotificationPreferenceHistoryResponse"/>
    </message>
    
    <message name="SetNotificationPreferenceRequest">
        <part name="Parameters" element="target:SetNotificationPreference"/>
    </message>
     <message name="QueryNotificationPreferenceHistoryRequest">
        <part name="Parameters" element="target:QueryNotificationPreferenceHistory"/>
    </message>
    <message name="SetNotificationPreferenceResponse">
        <part name="Parameters" element="target:SetNotificationPreferenceResponse"/>
    </message>

    <portType name="NotificationPortType">
        <operation name="CreateNotification">
            <input message="target:CreateNotificationRequest"/>
            <output message="target:CreateNotificationResponse"/>
            <fault message="fault:SystemFault" name="SystemFault"/>
            <fault message="fault:SecurityFault" name="SecurityFault"/>
            <fault message="fault:ValidationFault" name="ValidationFault"/>
            <fault message="fault:ServiceUnavailableFault" name="ServiceUnavailableFault"/>
        </operation>
        
        <operation name="SetNotificationPreference">
            <input message="target:SetNotificationPreferenceRequest"/>
            <output message="target:SetNotificationPreferenceResponse"/>
            <fault message="fault:SystemFault" name="SystemFault"/>
            <fault message="fault:SecurityFault" name="SecurityFault"/>
            <fault message="fault:ValidationFault" name="ValidationFault"/>
            <fault message="fault:ServiceUnavailableFault" name="ServiceUnavailableFault"/>
        </operation>
		<operation name="QueryNotificationPreferenceHistory">
            <input message="target:QueryNotificationPreferenceHistoryRequest"/>
            <output message="target:QueryNotificationPreferenceHistoryResponse"/>
            <fault message="fault:SystemFault" name="SystemFault"/>
            <fault message="fault:SecurityFault" name="SecurityFault"/>
            <fault message="fault:ValidationFault" name="ValidationFault"/>
            <fault message="fault:ServiceUnavailableFault" name="ServiceUnavailableFault"/>
        </operation>
        
    </portType>
</definitions>
