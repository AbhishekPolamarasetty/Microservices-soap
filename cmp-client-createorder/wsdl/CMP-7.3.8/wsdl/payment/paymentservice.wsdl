            </fault>
            <fault name="ServiceUnavailableFault">
                <soap:fault use="literal" name="ServiceUnavailableFault"/>
            </fault>
        </operation>
	</binding>
		
    <!-- service declns -->
    <service name="PaymentPort">
        <documentation> This is the WebService for Dise3G Payment management. </documentation>
        <port name="PaymentPort" binding="target:PaymentSOAPBinding">
            <soap:address location="http://localhost:8080/axis/services/PaymentService"/>
        </port>
    </service>

</definitions>
