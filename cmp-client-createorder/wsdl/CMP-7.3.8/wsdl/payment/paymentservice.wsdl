        </operation>

        <operation name="PaymentHistory">
            <documentation>Retrieves all one-off payments associated with an account</documentation>
			<soap:operation/>
            <input>
                <soap:body use="literal"/>
            </input>
            <output>
                <soap:body use="literal"/>
            </output>
            <fault name="SystemFault">
                <soap:fault use="literal" name="SystemFault"/>
            </fault>
            <fault name="SecurityFault">
                <soap:fault use="literal" name="SecurityFault"/>
            </fault>
            <fault name="ValidationFault">
                <soap:fault use="literal" name="ValidationFault"/>
            </fault>
            <fault name="ServiceUnavailableFault">
                <soap:fault use="literal" name="ServiceUnavailableFault"/>
            </fault>
        </operation>

        <operation name="GetPaymentErrors">
            <documentation>Retrieves error details of a given payment</documentation>
			<soap:operation/>
            <input>
                <soap:body use="literal"/>
            </input>
            <output>
                <soap:body use="literal"/>
            </output>
            <fault name="SystemFault">
                <soap:fault use="literal" name="SystemFault"/>
            </fault>
            <fault name="SecurityFault">
                <soap:fault use="literal" name="SecurityFault"/>
            </fault>
            <fault name="ValidationFault">
                <soap:fault use="literal" name="ValidationFault"/>
            </fault>
            <fault name="ServiceUnavailableFault">
                <soap:fault use="literal" name="ServiceUnavailableFault"/>
            </fault>
        </operation>

        <operation name="RecordPayment">
            <documentation> Records a new external card payment in Dise3G. </documentation>
			<soap:operation/>
            <input>
                <soap:body use="literal"/>
            </input>
            <output>
                <soap:body use="literal"/>
            </output>
            <fault name="SystemFault">
