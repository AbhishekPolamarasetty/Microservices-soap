<definitions targetNamespace="http://mdsuk.com/ws/dise3g/payment/service"
    xmlns="http://schemas.xmlsoap.org/wsdl/" xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/"
    xmlns:definition="http://mdsuk.com/ws/dise3g/payment/definition"
    xmlns:target="http://mdsuk.com/ws/dise3g/payment/service">

    <import namespace="http://mdsuk.com/ws/dise3g/payment/definition" location="payment.wsdl"/>

    <!-- binding declns -->

    <binding name="PaymentSOAPBinding" type="definition:PaymentPortType">
        <documentation> This Webservice binding encompasses all operations relating to Dise3G
            Payment WebServices. </documentation>

        <soap:binding style="document" transport="http://schemas.xmlsoap.org/soap/http"/>
        <operation name="CreatePayment">
            <documentation> Creates a new Payment within Dise3G. </documentation>
			<soap:operation/>
            <input>
                <soap:body use="literal"/>
            </input>
            <output>
                <soap:body use="literal"/>
            </output>
            <fault name="SystemFault">
                <soap:fault use="literal" name="SystemFault"/>
            </fault>
            <fault name="SecurityFault">
                <soap:fault use="literal" name="SecurityFault"/>
            </fault>
            <fault name="ValidationFault">
                <soap:fault use="literal" name="ValidationFault"/>
            </fault>
            <fault name="ServiceUnavailableFault">
                <soap:fault use="literal" name="ServiceUnavailableFault"/>
            </fault>
        </operation>

        <operation name="ReleasePayment">
            <documentation> Releases a previously Created Payment within Dise3G. </documentation>
			<soap:operation/>
            <input>
                <soap:body use="literal"/>
            </input>
            <output>
                <soap:body use="literal"/>
            </output>
            <fault name="SystemFault">
                <soap:fault use="literal" name="SystemFault"/>
            </fault>
            <fault name="SecurityFault">
                <soap:fault use="literal" name="SecurityFault"/>
            </fault>
            <fault name="ValidationFault">
                <soap:fault use="literal" name="ValidationFault"/>
            </fault>
            <fault name="ServiceUnavailableFault">
