<definitions targetNamespace="http://mdsuk.com/ws/dise3g/simulationworkfile/service"
    xmlns="http://schemas.xmlsoap.org/wsdl/" xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/"
    xmlns:definition="http://mdsuk.com/ws/dise3g/simulationworkfile/definition"
    xmlns:target="http://mdsuk.com/ws/dise3g/simulationworkfile/service">

    <import namespace="http://mdsuk.com/ws/dise3g/simulationworkfile/definition"
        location="simulationworkfile.wsdl"/>

    <!-- binding declns -->
    <binding name="SimulationWorkfileSOAPBinding" type="definition:SimulationWorkfilePortType">
        <documentation> This Webservice binding encompasses all operations relating to Dise3G
            Simulation Workfile WebServices. </documentation>
        <soap:binding style="document" transport="http://schemas.xmlsoap.org/soap/http"/>
        <operation name="GetSimulationWorkfileData">
            <documentation>Retrieves Simulation Workfile data from Dise3G.</documentation>
            <input>
                <soap:body use="literal"/>
            </input>
            <output>
                <soap:body use="literal"/>
            </output>
            <fault name="SystemFault">
                <soap:fault use="literal" name="SystemFault"/>
            </fault>
            <fault name="SecurityFault">
                <soap:fault use="literal" name="SecurityFault"/>
            </fault>
            <fault name="ValidationFault">
                <soap:fault use="literal" name="ValidationFault"/>
            </fault>
            <fault name="ServiceUnavailableFault">
                <soap:fault use="literal" name="ServiceUnavailableFault"/>
            </fault>
        </operation>
    </binding>

    <!-- service declns -->
    <service name="SimulationWorkfilePort">
        <documentation>This is the WebService for Dise3G Simulation Workfile service.</documentation>
        <port name="SimulationWorkfilePort" binding="target:SimulationWorkfileSOAPBinding">
            <soap:address location="http://localhost:8080/axis/services/SimulationWorkfileService"/>
        </port>
    </service>

</definitions>
