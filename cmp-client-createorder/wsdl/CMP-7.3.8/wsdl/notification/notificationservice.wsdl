<?xml version="1.0" encoding="UTF-8"?>

<definitions targetNamespace="http://mdsuk.com/ws/dise3g/notification/service"
    xmlns="http://schemas.xmlsoap.org/wsdl/"
    xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/"
    xmlns:target="http://mdsuk.com/ws/dise3g/notification/service"
    xmlns:definition="http://mdsuk.com/ws/dise3g/notification/definition"
    xmlns:soapenc="http://schemas.xmlsoap.org/soap/encoding/">

    <import namespace="http://mdsuk.com/ws/dise3g/notification/definition" location="notification.wsdl"/>

    <!-- binding declns -->
    <binding name="NotificationSoapBinding" type="definition:NotificationPortType">
        <documentation>
            This Webservice binding encompasses all operations relating to notification.
        </documentation>
        <soap:binding style="document" transport="http://schemas.xmlsoap.org/soap/http"/>
        <operation name="CreateNotification">
            <documentation>Create Notification</documentation>
			<soap:operation/>
            <input>
                <soap:body use="literal"/>
            </input>
            <output>
                <soap:body use="literal"/>
            </output>
            <fault name="SystemFault">
                <soap:fault name="SystemFault" use="literal"/>
            </fault>
            <fault name="SecurityFault">
                <soap:fault name="SecurityFault" use="literal"/>
            </fault>
            <fault name="ValidationFault">
                <soap:fault name="ValidationFault" use="literal"/>
            </fault>
            <fault name="ServiceUnavailableFault">
                <soap:fault name="ServiceUnavailableFault" use="literal"/>
            </fault>
        </operation>
        
        <operation name="SetNotificationPreference">
            <documentation>Set Notification Preference</documentation>
			<soap:operation/>
            <input>
                <soap:body use="literal"/>
            </input>
            <output>
                <soap:body use="literal"/>
            </output>
            <fault name="SystemFault">
                <soap:fault name="SystemFault" use="literal"/>
            </fault>
            <fault name="SecurityFault">
                <soap:fault name="SecurityFault" use="literal"/>
            </fault>
            <fault name="ValidationFault">
                <soap:fault name="ValidationFault" use="literal"/>
            </fault>
            <fault name="ServiceUnavailableFault">
                <soap:fault name="ServiceUnavailableFault" use="literal"/>
            </fault>
        </operation>
    	<operation name="QueryNotificationPreferenceHistory">
            <documentation>Pull the information from subscription notification history preference</documentation>
			<soap:operation/>
            <input>
                <soap:body use="literal"/>
            </input>
            <output>
                <soap:body use="literal"/>
            </output>
            <fault name="SystemFault">
                <soap:fault use="literal" name="SystemFault"/>
            </fault>
            <fault name="SecurityFault">
                <soap:fault use="literal" name="SecurityFault"/>
            </fault>
            <fault name="ValidationFault">
                <soap:fault use="literal" name="ValidationFault"/>
            </fault>
            <fault name="ServiceUnavailableFault">
                <soap:fault use="literal" name="ServiceUnavailableFault"/>
            </fault>
        </operation>
  
    
    </binding>

    <!-- service declns -->
    <service name="NotificationPort">
        <documentation>This is the webservice for notification processing.</documentation>
        <port name="NotificationPort" binding="target:NotificationSoapBinding">
            <soap:address location="http://localhost:63109/ws/dise3g/services/NotificationPort"/>
        </port>
    </service>
</definitions>
