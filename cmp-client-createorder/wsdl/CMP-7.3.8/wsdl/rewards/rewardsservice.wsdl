<definitions targetNamespace="http://mdsuk.com/ws/dise3g/rewards/service"
    xmlns="http://schemas.xmlsoap.org/wsdl/" xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/"
    xmlns:target="http://mdsuk.com/ws/dise3g/rewards/service"
	xmlns:definition="http://mdsuk.com/ws/dise3g/rewards/definition" 
	xmlns:soapenc="http://schemas.xmlsoap.org/soap/encoding/">

    <import namespace="http://mdsuk.com/ws/dise3g/rewards/definition"
        location="rewards.wsdl"/>

    <!-- binding declns -->
    <binding name="RewardsSOAPBinding" type="definition:RewardsPortType">
        	<documentation> This Webservice binding encompasses all operations relating to Dise3G
            				Rewards WebService. 
            </documentation>
        <soap:binding style="document" transport="http://schemas.xmlsoap.org/soap/http"/>
        <operation name="SetDefaultRewardCategory">
            <documentation>Sets the Default Reward Category for Dise3G.</documentation>
            <input>
                <soap:body use="literal"/>
            </input>
            <output>
                <soap:body use="literal"/>
            </output>
            <fault name="SystemFault">
                <soap:fault use="literal" name="SystemFault"/>
            </fault>
            <fault name="SecurityFault">
                <soap:fault use="literal" name="SecurityFault"/>
            </fault>
            <fault name="ValidationFault">
                <soap:fault use="literal" name="ValidationFault"/>
            </fault>
            <fault name="ServiceUnavailableFault">
                <soap:fault use="literal" name="ServiceUnavailableFault"/>
            </fault>
        </operation>
		
		<operation name="RedeemReward">
            <documentation> Redeems a reward available to the customer. </documentation>
			<soap:operation/>
            <input>
                <soap:body use="literal"/>
            </input>
            <output>
                <soap:body use="literal"/>
            </output>
            <fault name="SystemFault">
                <soap:fault name="SystemFault" use="literal"/>
            </fault>
            <fault name="SecurityFault">
                <soap:fault name="SecurityFault" use="literal"/>
            </fault>
            <fault name="ValidationFault">
                <soap:fault name="ValidationFault" use="literal"/>
            </fault>
            <fault name="ServiceUnavailableFault">
                <soap:fault name="ServiceUnavailableFault" use="literal"/>
            </fault>
        </operation>
    </binding>

    <!-- service declns -->
    <service name="RewardsPort">
        <documentation>This is the WebService for Dise3G Rewards WebService.</documentation>
        <port name="RewardsPort" binding="target:RewardsSOAPBinding">
            <soap:address location="http://localhost:63209/ws/dise3g/services/RewardsPort"/>
        </port>
    </service>

</definitions>