<definitions targetNamespace="http://mdsuk.com/ws/dise3g/rewards/definition"
    xmlns="http://schemas.xmlsoap.org/wsdl/" 
    xmlns:fault="http://mdsuk.com/ws/dise3g/fault/definition"
    xmlns:target="http://mdsuk.com/ws/dise3g/rewards/definition">
     <documentation>This Webservice definition encompasses all operations relating to Simulation Workfile management. </documentation>

	<import namespace="http://mdsuk.com/ws/dise3g/fault/definition" location="../fault/fault.wsdl"/>

    <types>
        <schema xmlns="http://www.w3.org/2001/XMLSchema"
            targetNamespace="http://mdsuk.com/ws/dise3g/rewards/definition"
            xmlns:rewards="http://mdsuk.com/ws/dise3g/rewards/dto/service"
            elementFormDefault="qualified">
            <import namespace="http://mdsuk.com/ws/dise3g/rewards/dto/service" schemaLocation="../../xsd/rewardsservice.xsd"/>

            <element name="SetDefaultRewardCategory">
                <complexType>
                    <sequence>
                        <element name="Request" type="rewards:SetDefaultRewardCategoryType"/>
                    </sequence>
                </complexType>
            </element>

            <element name="SetDefaultRewardCategoryResponse">
                <complexType>
                    <sequence>
                        <element name="Response" type="rewards:SetDefaultRewardsCategoryResponseType"/>
                    </sequence>
                </complexType>
            </element>
						
			<element name="RedeemReward">
                <annotation>
                    <documentation> The request RedeemReward definition </documentation>
                </annotation>
                <complexType>
                    <sequence>
                        <element name="Request" type="rewards:RedeemRewardType"/>
                    </sequence>
                </complexType>
            </element>
			
			<element name="RedeemRewardResponse">
                <annotation>
                    <documentation> The response RedeemReward definition </documentation>
                </annotation>
                <complexType>
                    <sequence>
                        <element name="Result" type="rewards:RedeemRewardResponseType"/>
                    </sequence>
                </complexType>
            </element>
        </schema>
    </types>

    <message name="SetDefaultRewardCategoryRequest">
        <part name="Parameters" element="target:SetDefaultRewardCategory"/>
    </message>

    <message name="SetDefaultRewardCategoryResponse">
        <part name="Result" element="target:SetDefaultRewardCategoryResponse"/>
    </message>
	
	<message name="RedeemRewardRequest">
        <part name="Parameters" element="target:RedeemReward"/>
    </message>
    
    <message name="RedeemRewardResponse">
        <part name="Parameters" element="target:RedeemRewardResponse"/>
    </message>

    <portType name="RewardsPortType">
        <operation name="SetDefaultRewardCategory">
            <input message="target:SetDefaultRewardCategoryRequest"/>
            <output message="target:SetDefaultRewardCategoryResponse"/>
            <fault message="fault:SystemFault" name="SystemFault"/>
            <fault message="fault:SecurityFault" name="SecurityFault"/>
            <fault message="fault:ValidationFault" name="ValidationFault"/>
            <fault message="fault:ServiceUnavailableFault" name="ServiceUnavailableFault"/>
        </operation>

		<operation name="RedeemReward">
            <input message="target:RedeemRewardRequest"/>
            <output message="target:RedeemRewardResponse"/>
            <fault message="fault:SystemFault" name="SystemFault"/>
            <fault message="fault:SecurityFault" name="SecurityFault"/>
            <fault message="fault:ValidationFault" name="ValidationFault"/>
            <fault message="fault:ServiceUnavailableFault" name="ServiceUnavailableFault"/>
        </operation>
    </portType>
</definitions>
