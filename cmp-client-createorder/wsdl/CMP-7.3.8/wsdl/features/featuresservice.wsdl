<?xml version="1.0" encoding="UTF-8"?>

<definitions targetNamespace="http://mdsuk.com/ws/dise3g/features/service"
    xmlns="http://schemas.xmlsoap.org/wsdl/" xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/"
    xmlns:target="http://mdsuk.com/ws/dise3g/features/service"
	xmlns:definition="http://mdsuk.com/ws/dise3g/features/definition" 
	xmlns:soapenc="http://schemas.xmlsoap.org/soap/encoding/">

    <import namespace="http://mdsuk.com/ws/dise3g/features/definition"
        location="features.wsdl"/>

    <!-- binding declns -->
    <binding name="FeaturesSOAPBinding" type="definition:FeaturesPortType">
        	<documentation> This Webservice binding encompasses all operations relating to Dise3G
            				Features WebService. 
            </documentation>
        <soap:binding style="document" transport="http://schemas.xmlsoap.org/soap/http"/>
        <operation name="SetFeature">
            <documentation>Sets Subscription Features for Dise3G.</documentation>
            <input>
                <soap:body use="literal"/>
            </input>
            <output>
                <soap:body use="literal"/>
            </output>
            <fault name="SystemFault">
                <soap:fault use="literal" name="SystemFault"/>
            </fault>
            <fault name="SecurityFault">
                <soap:fault use="literal" name="SecurityFault"/>
            </fault>
            <fault name="ValidationFault">
                <soap:fault use="literal" name="ValidationFault"/>
            </fault>
            <fault name="ServiceUnavailableFault">
                <soap:fault use="literal" name="ServiceUnavailableFault"/>
            </fault>
        </operation>
        
        <operation name="QueryFeatureHistory">
            <documentation>Queries Feature History for Dise3G.</documentation>
            <input>
                <soap:body use="literal"/>
            </input>
            <output>
                <soap:body use="literal"/>
            </output>
            <fault name="SystemFault">
                <soap:fault use="literal" name="SystemFault"/>
            </fault>
            <fault name="SecurityFault">
                <soap:fault use="literal" name="SecurityFault"/>
            </fault>
            <fault name="ValidationFault">
                <soap:fault use="literal" name="ValidationFault"/>
            </fault>
            <fault name="ServiceUnavailableFault">
                <soap:fault use="literal" name="ServiceUnavailableFault"/>
            </fault>
        </operation>
    </binding>

    <!-- service declns -->
    <service name="FeaturesPort">
        <documentation>This is the WebService for Dise3G Features WebService.</documentation>
        <port name="FeaturesPort" binding="target:FeaturesSOAPBinding">
            <soap:address location="http://localhost:63209/ws/dise3g/services/FeaturesPort"/>
        </port>
    </service>

</definitions>